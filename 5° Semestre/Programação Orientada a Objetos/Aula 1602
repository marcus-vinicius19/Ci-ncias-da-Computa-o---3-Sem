import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.println("Digite o número do termo que você precisa:");
		int termo = scanner.nextInt();
		
		if((termo % 3) == 0){
		    System.out.println("O termo é par");
		} else {
		    System.out.println("O termo é impar");
		}
	}
}
